generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

/* -------------------------------------------------------------------------- */
/*                                   Usuario                                  */
/* -------------------------------------------------------------------------- */

model User {
  id String @id() @default(cuid())
  firstName String @map("first_name") @db.VarChar(45)
  lastName String @map("last_name") @db.VarChar(45)
  username String @unique @db.Char(16)
  email String @unique @db.VarChar(150)
  phone String? @db.Char(10)
  password String @db.VarChar(255)
  rfc String? @db.Char(13)
  status EnumUserStatus @default(activo)
  rol EnumUserRole @default(user)
  stripeAccountId String? @db.VarChar(155) @map("stripe_account_id")
  stripeBankAccountId String? @db.VarChar(155) @map("stripe_bank_account_id")
  @@map("user")
}

/* -------------------------------------------------------------------------- */
/*                                    Enums                                   */
/* -------------------------------------------------------------------------- */

enum EnumUserRole {
  user
  admin
  root
}

enum EnumUserStatus {
  activo
  suspendido
  eliminado
}